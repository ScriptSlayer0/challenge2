/* Dispositivos muy pequeños (móviles en portrait, menos de 576px) */
@media (max-width: 575.98px) {
  /* Estilos específicos para móviles pequeños */
}

/* Dispositivos pequeños (móviles en landscape, 576px y más) */
@media (min-width: 576px) and (max-width: 767.98px) {
  /* Estilos para móviles en horizontal */
}

/* Todos los móviles (hasta 767.98px) */
@media (max-width: 767.98px) {
  /* Estilos generales para móviles */
}


/* Dispositivos medianos (tablets, 768px y más) */
@media (min-width: 768px) and (max-width: 991.98px) {
    /* Estilos específicos para tablets */
  }
  
  /* Tablets en modo portrait (768px a 1024px) */
  @media (min-width: 768px) and (max-width: 1024px) and (orientation: portrait) {
    /* Estilos para tablets en vertical */
  }
  
  /* Tablets en modo landscape (768px a 1024px) */
  @media (min-width: 768px) and (max-width: 1024px) and (orientation: landscape) {
    /* Estilos para tablets en horizontal */
  }

  /* Para móviles y tablets (hasta 1024px) */
@media (max-width: 1024px) {
    /* Estilos que aplican a ambos dispositivos */
  }
  
  /* Solo para móviles y tablets (desde 320px hasta 1024px) */
  @media (min-width: 320px) and (max-width: 1024px) {
    /* Estilos para el rango completo */
  }

  /* Pantallas de alta resolución (Retina) */
@media only screen and (-webkit-min-device-pixel-ratio: 2),
only screen and (min-resolution: 192dpi) {
/* Estilos para pantallas HD/Retina */
}

/* Modo oscuro */
@media (prefers-color-scheme: dark) {
/* Estilos para cuando el usuario tiene activado el modo oscuro */
}

/* Dispositivos con pantalla táctil */
@media (hover: none) and (pointer: coarse) {
/* Estilos para interfaces táctiles */
}